<div class="page-header">
  <h3>Favourite #<%= @favourite.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Movie</dt>
      <dd><%= @favourite.movie_id %></dd>

      <dt>User</dt>
      <dd><%= @favourite.user_id %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/favourites" class="btn btn-primary">
        Back
      </a>
      <a href="/favourites/<%= @favourite.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_favourite/<%= @favourite.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
