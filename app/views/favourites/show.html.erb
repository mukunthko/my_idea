<div class="page-header">
  <h3>Favourite #<%= @favourite.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Movie</dt>
      <dd>
        <% if @favourite.movie.present? %>
          <a href="/movies/<%= @favourite.movie_id %>">
            <%= @favourite.movie.title %>
          </a>
        <% end %>
      </dd>

      <dt>User</dt>
      <dd>
        <% if @favourite.user.present? %>
          <a href="/users/<%= @favourite.user_id %>">
            <%= @favourite.user.email %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/favourites" class="btn btn-primary">
        Back
      </a>
      <% if current_user == @favourite.user %>
        <a href="/favourites/<%= @favourite.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_favourite/<%= @favourite.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>
